<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Mercado Liebre Argentina</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
		integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/css/app.css">
</head>
<body>
	<!-- Header -->
		<%- include('partials/header') %> 
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultima visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu última visita</h2>
			</div>
			<!-- Productos -->
			<% productos.forEach(product => { %>
			 <div class="col-12 col-sm-6 col-lg-3">
				 <section class="product-box">
					 <a href="">
						 <figure class="product-box_image">
							 <img src="/images/<%= product.image %> " alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<h2>$<%= product.price %></h2>
								<span><%= product.discount %>% OFF</span>
								<p><%= product.name %></p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
			<% }) %>
			<!-- /Productos -->
			
	<!-- /Ofertas -->

	<!-- footer -->
		<%- include('partials/footer') %> 
	<!-- /footer -->
	<div class="sub-footer">
		<div class="container">
			<p>Copyright © 1999-2019 MercadoLiebre S.R.L.</p>
		</div>
	</div>
	<!-- /footer -->
</body>
</html>